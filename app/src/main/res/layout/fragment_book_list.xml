<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".views.fragments.BooksListFragment"
    >

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/text_input_layout_books_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        android:textColor="@color/font_navy_blue"
        android:textColorHint="@color/font_navy_blue"
        android:textSize="@dimen/mobile_button_font_size_header"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconContentDescription="@string/search"
        app:startIconDrawable="@drawable/ic_search_black_24dp"
        android:background="@color/disabled_1st"
        android:layoutAnimation="@anim/animation"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >


        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/edit_text_books_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


